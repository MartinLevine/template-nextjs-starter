{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              ":PACKAGE_WITH_PROTOCOL:",
              ":BLANK_LINE:",
              ":PACKAGE:",
              ":BLANK_LINE:",
              [":NODE:", ":BUN:"],
              ":BLANK_LINE:",
              ":ALIAS:",
              ":BLANK_LINE:",
              ":URL:",
              ":BLANK_LINE:",
              ":PATH:"
            ],
            "identifierOrder": "lexicographic"
          }
        },
        "useSortedAttributes": {
          "level": "on",
          "options": {
            "sortOrder": "lexicographic"
          }
        },
        "useSortedKeys": {
          "level": "on",
          "options": {
            "sortOrder": "lexicographic"
          }
        },
        "useSortedProperties": "on"
      }
    },
    "enabled": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**/*.{js,jsx,cjs,mjs,ts,tsx,cts,mts,vue,astro}",
      "!node_modules",
      "!.next",
      "!dist",
      "!build"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "bracketSameLine": true,
      "bracketSpacing": true,
      "indentWidth": 4,
      "jsxQuoteStyle": "double",
      "lineWidth": 120,
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "none"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": "off",
      "complexity": {
        "noBannedTypes": "off"
      },
      "correctness": {
        "noNestedComponentDefinitions": "off",
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "warn",
        "useUniqueElementIds": "warn"
      },
      "recommended": true,
      "style": {
        "useImportType": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "warn",
        "useIterableCallbackReturn": "off"
      }
    }
  },
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  }
}
